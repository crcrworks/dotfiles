{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/claude-opus-4.5",
  "plugin": [
    "oh-my-opencode",
    "opencode-copilot-usage-toast"
  ],
  "mode": {
    "ask": {
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "patch": false,
        "todowrite": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todoread": true,
        "webfetch": true
      }
    }
  },
  "provider": {
    "github-copilot": {
      "models": {
        "gpt-5.1-high": {
          "id": "gpt-5.1",
          "options": {
            "reasoningEffort": "high",
            "textVerbosity": "medium",
            "reasoningSummary": "auto"
          }
        },
        "gpt-5.2-low": {
          "id": "gpt-5.2",
          "options": {
            "reasoningEffort": "low",
            "textVerbosity": "low",
            "reasoningSummary": "auto"
          }
        },
        "gpt-5.2-high": {
          "id": "gpt-5.2",
          "options": {
            "reasoningEffort": "high",
            "textVerbosity": "medium",
            "reasoningSummary": "detailed"
          }
        },
        "gpt-5.2-xhigh": {
          "id": "gpt-5.2",
          "options": {
            "reasoningEffort": "xhigh",
            "textVerbosity": "high",
            "reasoningSummary": "detailed"
          }
        }
      }
    }
  },
  "mcp": {
    "pdf-reader": {
      "type": "local",
      "enabled": false,
      "command": [
        "npx",
        "-y",
        "@sylphx/pdf-reader-mcp"
      ],
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "ctx7sk-b5641bc1-28b7-415d-8951-1d0d7b73cf51"
      ],
      "enabled": true
    }
  },
}
