# シェルをzshに設定
.shell "/bin/bash"


# ウィンドウのフォーカス移動
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# ウィンドウの入れ替え
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# ウィンドウの移動（warp）
ctrl + shift + alt - h : yabai -m window west --insert south; yabai -m window --warp west
ctrl + shift + alt - j : yabai -m window south --insert east; yabai -m window --warp south
ctrl + shift + alt - k : yabai -m window north --insert west; yabai -m window --warp north
ctrl + shift + alt - l : yabai -m window east --insert north; yabai -m window --warp east

# スペースへフォーカス移動（最初のウィンドウを選択）
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - a : yabai -m space --focus 5
alt - s : yabai -m space --focus 6
alt - f : yabai -m space --focus 7
alt - w : yabai -m space --focus 8

# ウィンドウを別スペースに移動
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - a : yabai -m window --space 5
shift + alt - s : yabai -m window --space 6
shift + alt - f : yabai -m window --space 7
shift + alt - w : yabai -m window --space 8

# 最近使ったスペースへ移動（最初のウィンドウを選択）
alt - tab : yabai -m space --focus recent; yabai -m window --focus first

# ウィンドウ操作
alt - return : yabai -m window --toggle zoom-fullscreen
shift + ctrl - f : yabai -m window --toggle float
shift + ctrl - s : yabai -m window --toggle sticky
shift + ctrl - p : yabai -m window --toggle sticky --toggle pip
shift + ctrl - e : yabai -m window --toggle expose

# ウィンドウをstack（重ねる）
shift + ctrl - h : yabai -m window west --stack $(yabai -m query --windows --window | jq -r '.id')
shift + ctrl - j : yabai -m window south --stack $(yabai -m query --windows --window | jq -r '.id')
shift + ctrl - k : yabai -m window north --stack $(yabai -m query --windows --window | jq -r '.id')
shift + ctrl - l : yabai -m window east --stack $(yabai -m query --windows --window | jq -r '.id')

# stack内のウィンドウを切り替え
alt - n : yabai -m window --focus stack.next || yabai -m window --focus stack.first
alt - p : yabai -m window --focus stack.prev || yabai -m window --focus stack.last

# stackを解除（unstack）
# 方法1: 別ウィンドウがある場合はwarpで解除
shift + ctrl - u : yabai -m window --toggle float && yabai -m window --toggle float

# ウィンドウサイズ調整
ctrl + lalt - h    : yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0
ctrl + lalt - j    : yabai -m window --resize bottom:0:100 || yabai -m window --resize top:0:100
ctrl + lalt - k    : yabai -m window --resize bottom:0:-100 || yabai -m window --resize top:0:-100
ctrl + lalt - l : yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0

lalt + shift - return : yabai -m window --toggle zoom-parent
